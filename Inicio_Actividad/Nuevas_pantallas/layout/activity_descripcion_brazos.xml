<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/btn_volver"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_volver"
            android:padding="14dp"
            android:clickable="true"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- Primer conjunto: Texto en negrita a la izquierda y una imagen a la derecha -->

            <!-- Segundo conjunto: RelativeLayout con fondo distinto -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Texto a la izquierda -->

                <!-- Nuevo texto debajo del primer texto -->


                <!-- Imagen a la derecha -->
                <TextView
                    android:id="@+id/textoPrincipal"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="EJERCICIOS DE BRAZOS"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="124dp"
                    android:layout_height="99dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/brazos_redondo" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_texto2"
                android:padding="5dp">

                <!-- Texto en la parte superior del RelativeLayout -->
                <TextView
                    android:id="@+id/textoPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textStyle="bold"
                    android:textSize="30dp"/>

                <!-- Textos a la izquierda y a la derecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textoPerfil"
                    android:orientation="horizontal"
                    android:id="@+id/textoPerfil2">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estado" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PR Conseguida" />

                </LinearLayout>

                <!-- Textos editables con imagen de lápiz debajo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/textoPerfil2"
                    android:id="@+id/textoPerfil3">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Bueno"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/editar" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="80 KG"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/editar" />

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/textoPerfil4"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 Ejercicios"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:id="@+id/textoBasico"
                    android:layout_gravity="start"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ejercicios básicos"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_texto2"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/textoPerfilEjer1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/foto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/triceps_mancuerna" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/texto1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/foto"
                            android:layout_marginStart="10dp"
                            android:text="Triceps con pesas"
                            android:textStyle="bold"
                            android:textSize="25dp"/>

                        <TextView
                            android:id="@+id/texto2"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/texto1"
                            android:layout_marginStart="10dp"
                            android:text="4 series x 12 reps"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_texto2"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/textoPerfilEjer21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/foto2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/curl_barra" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/texto12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/foto"
                            android:layout_marginStart="10dp"
                            android:text="Curl de biceps con barra"
                            android:textStyle="bold"
                            android:textSize="25dp"/>

                        <TextView
                            android:id="@+id/texto22"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/texto1"
                            android:layout_marginStart="10dp"
                            android:text="4 series x 12 reps"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_texto2"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/textoPerfilEjer31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/foto3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/biceps_cuerda" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/texto13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/foto"
                            android:layout_marginStart="10dp"
                            android:text="Biceps con Cuerda"
                            android:textStyle="bold"
                            android:textSize="25dp"/>

                        <TextView
                            android:id="@+id/texto23"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/texto1"
                            android:layout_marginStart="10dp"
                            android:text="4 series x 12 reps"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_texto2"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id="@+id/textoPerfilEjer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/foto4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/triceps_cuerda" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/texto14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/foto"
                            android:layout_marginStart="10dp"
                            android:text="Triceps con cuerda"
                            android:textStyle="bold"
                            android:textSize="25dp"/>

                        <TextView
                            android:id="@+id/texto24"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/texto1"
                            android:layout_marginStart="10dp"
                            android:text="4 series x 12 reps"
                            android:textSize="17dp"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>




        </LinearLayout>
    </ScrollView>
</LinearLayout>