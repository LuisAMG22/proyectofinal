<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFA500" /> <!-- Cambia el color de fondo cuando se presiona -->
            <corners android:radius="10dp" /> <!-- Cambia el radio de las esquinas para hacerlas redondas -->
        </shape>
    </item>
    <!-- Estado predeterminado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cambia el color de fondo predeterminado (blanco en este caso) -->
            <corners android:radius="10dp" /> <!-- Cambia el radio de las esquinas para hacerlas redondas -->
        </shape>
    </item>
</selector>
